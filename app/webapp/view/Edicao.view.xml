<mvc:View
    controllerName="l4edesafio.controller.Edicao"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m">
	 
    <Page showHeader="true" title="Edição de Dados" titleAlignment="Center">

        <content >
         <form:Form >
    
             <form:layout>
                <form:ColumnLayout columnsXL="3" columnsL="2" columnsM="2" labelCellsLarge="2" emptyCellsLarge="2"/>                 
             </form:layout>
             <form:formContainers>

                <form:FormContainer>
                    <form:formElements>
                        
                        <form:FormElement>
                            <form:label>
                                <Label text="Nome" design="Bold"/>
                            </form:label>
                            <form:fields>
                                <Input enabled="false"/>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement>
                            <form:label>
                                <Label text="Email" design="Bold"/>
                            </form:label>
                            <form:fields>
                                <Input enabled="false"/>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement>
                            <form:label>
                                <Label text="Data de Nascimento" design="Bold"/>
                            </form:label>
                            <form:fields>
                                <MaskInput placeholder="DD/MM/AAAA" mask="~~/~~/~~~~" enabled="false">
                                        <rules>
                                            <MaskInputRule maskFormatSymbol="~"/>
                                        </rules>
				                </MaskInput>
                            </form:fields>
                        </form:FormElement>

                         <form:FormElement>
                            <form:label>
                                <Label text="Setor" design="Bold"/>
                            </form:label>
                            <form:fields>
                                    <Input value="{Employees>department_ID}" enabled="false"/>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement >
                            <form:label >
                                <Label design="Bold" text="Ja está vacinado do COVID-19?"/>
                            </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton  text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>
                        
                        <form:FormElement >
                            <form:label>
                                <Label labelFor="rbg2" design="Bold" text="Pertence ao Grupo de Risco?" />
                            </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement >
                            <form:label>
                                <Label design="Bold" text="Mora com alguém do grupo de Risco?" />
                            </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton  text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>
                        
                        <form:FormElement >
                            <form:label>
                                <Label design="Bold" text="Utiliza transporte coletivo?" />
                            </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton  text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement >
                                <form:label>
                                <Label  design="Bold" text="Passa mais de 1 hora no transporte coletivo?" />
                                </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton  text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>

                        <form:FormElement >
                            <form:label>
                                <Label design="Bold" text="Possui ambiente e equipamento para trabalho Home Office?" />
                            </form:label>
                            <form:fields>
                                <RadioButtonGroup  columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                    <RadioButton  text="Sim" />
                                    <RadioButton  text="Não" />
                                </RadioButtonGroup>
                            </form:fields>
                        </form:FormElement>
                    </form:formElements>
                </form:FormContainer>
             </form:formContainers>
         </form:Form>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button  text="Confirmar" press="onConfirmar" type="Emphasized"/>
                <Button text="Cancelar"  press="onCancelar" type="Reject"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
